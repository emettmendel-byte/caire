# CAIRE backend - minimal image for local dev
FROM python:3.12-slim

WORKDIR /app

# Install deps (copy pyproject so we can install)
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e .

COPY backend/ ./backend/
COPY shared/ ./shared/

# Default run
ENV CAIRE_DB_PATH=/app/data/caire.db
EXPOSE 8000
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
